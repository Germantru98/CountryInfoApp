@model List<BusinessLogicLayer.Models.CountryInfoDTO>
@{
    ViewBag.Title = "Все страны";
}
@if (Model.Count > 0)
{
    <div class="row">
        @foreach (var item in Model)
        {
            @Html.Partial("CountryView", item)
        }
    </div>
    <div class="text-center mt-4">
        @Html.ActionLink("Назад", "Index", "Home", new { @class = "btn btn-primary btn-lg" })
    </div>
}
else
{
    <h1>Список пуст</h1>
    <div class="text-center mt-4">
        @Html.ActionLink("Назад", "Index", "Home", new { @class = "btn btn-primary btn-lg" })
    </div>
}