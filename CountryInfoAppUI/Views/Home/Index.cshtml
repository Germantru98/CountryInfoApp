@{
    ViewBag.Title = "Home Page";
}
@model CountryInfoAppUI.Models.IndexViewModel

<div class="col-xl-3 mx-auto mt-5">
    <div class="m-2">
        @using (Html.BeginForm("GetCountryInfo", "Home", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="input-group-append">
                @Html.EditorFor(m => m.CountryName, new { htmlAttributes = new { @class = "form-control", placeholder = "Название страны" } })
                <button type="submit" class="btn btn-primary ml-1">
                    Поиск
                </button>
            </div>
            @Html.ValidationMessageFor(m => m.CountryName, "", new { @class = "text-danger" })
        }
    </div>
    <div class="m-2">
        @Html.ActionLink("Все страны", "GetAllCountriesInfos", "Home", null, new { @class = "btn btn-primary" })
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}